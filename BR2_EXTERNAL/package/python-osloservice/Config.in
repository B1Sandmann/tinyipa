# vim: noexpandtab filetype=make
config BR2_PACKAGE_PYTHON_OSLOSERVICE
	bool "python-oslo.service"
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_PYTHON_WEBOB
	select BR2_PACKAGE_PYTHON_DEBTCOLLECTOR
	select BR2_PACKAGE_PYTHON_EVENTLET
	select BR2_PACKAGE_PYTHON_FIXTURES
	select BR2_PACKAGE_PYTHON_GREENLET
	select BR2_PACKAGE_PYTHON_OSLOUTILS
	select BR2_PACKAGE_PYTHON_OSLOCONCURRENCY
	select BR2_PACKAGE_PYTHON_OSLOCONFIG
	select BR2_PACKAGE_PYTHON_OSLOLOG
	select BR2_PACKAGE_PYTHON_SIX
	select BR2_PACKAGE_PYTHON_OSLOI18N
	select BR2_PACKAGE_PYTHON_PASTEDEPLOY
	select BR2_PACKAGE_PYTHON_ROUTES
	select BR2_PACKAGE_PYTHON_PASTE
	select BR2_PACKAGE_PYTHON_YAPPI
	help
		oslo.service provides a framework for defining new long-running services using the patterns established by other OpenStack applications. It also includes utilities long-running applications might need for working with SSL or WSGI, performing periodic operations, interacting with systemd, etc.
		
		https://docs.openstack.org/oslo.service/latest/
