# vim: noexpandtab filetype=make
config BR2_PACKAGE_PYTHON_OSLOLOG
	bool "python-oslo.log"
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_PYTHON_PBR
	select BR2_PACKAGE_PYTHON_SIX
	select BR2_PACKAGE_PYTHON_OSLOCONFIG
	select BR2_PACKAGE_PYTHON_OSLOCONTEXT
	select BR2_PACKAGE_PYTHON_OSLOI18N
	select BR2_PACKAGE_PYTHON_OSLOUTILS
	select BR2_PACKAGE_PYTHON_OSLOSERIALIZATION
	select BR2_PACKAGE_PYTHON_DEBTCOLLECTOR
	select BR2_PACKAGE_PYTHON_PYINOTIFY
	select BR2_PACKAGE_PYTHON_PYTHON_DATEUTIL
	select BR2_PACKAGE_PYTHON_MONOTONIC
	help
	  The oslo.log (logging) configuration library provides standardized configuration for all openstack projects.
	  It also provides custom formatters, handlers and support for context specific logging (like resource id's etc).

	  https://docs.openstack.org/oslo.log/latest
