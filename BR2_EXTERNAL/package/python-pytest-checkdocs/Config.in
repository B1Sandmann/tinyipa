# vim: noexpandtab filetype=make
config BR2_PACKAGE_PYTHON_PYTHON_PYTEST_CHECKDOCS
	bool "python-pytest-checkdocs"
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_PYTHON_DOCUTILS
	select BR2_PACKAGE_PYTHON_IMPORTLIB_METADATA
	select BR2_PACKAGE_PYTHON_MORE_ITERTOOLS
	select BR2_PACKAGE_PYTHON_SPHINX
	select BR2_PACKAGE_PYTHON_JARACOPACKAGING
	select BR2_PACKAGE_PYTHON_RSTLINKER
	select BR2_PACKAGE_PYTHON_PYTEST
	select BR2_PACKAGE_PYTHON_PYTEST_CHECKDOCS
	select BR2_PACKAGE_PYTHON_PYTEST_FLAKE8
	select BR2_PACKAGE_PYTHON_PYTEST_BLACK_MULTIPY
	select BR2_PACKAGE_PYTHON_PYTEST_COV
	help
	  check the README when running tests

	  https://github.com/jaraco/pytest-checkdocs
